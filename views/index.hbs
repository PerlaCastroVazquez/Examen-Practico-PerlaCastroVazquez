{{> header}}
{{> navbar}}
<div class="container" id="ole">
    <h1>P I N T O R E S</h1>
    {{#if pintores}}
    <table class="table table-dark table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Nacionalidad</td>
            <td>Nacimiento</td>
            <td>Corriente</td>
            <td>Pinturas</td>
        </tr>
    </thead>
    <tbody>
        {{#each pintores}}
        <tr>
            <td>{{_id}}</td>
            <td>{{nombre}}</td>
            <td>{{nacionalidad}}</td>
             <td>{{nacimiento}}</td>
            <td>{{corriente}}</td>
            <td><img class="border border-white rounded" src="../images/{{pintura}}"></td>
        </tr>
        {{/each}}
    </tbody>
    </table>
    {{else}}
    <div>No se encuentran Pintores</div>
    {{/if}}
</div>
{{> footer}}